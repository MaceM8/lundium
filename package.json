{
	"name": "lundium",
	"version": "0.1.0",
	"description": "Collection of UI components used in Lundegaard projects",
	"repository": "https://github.com/lundegaard/lundium.git",
	"private": true,
	"contributors": [
		"Tomas Konrady <tomas.konrady@lundegaard.eu>",
		"Vaclav Jancarik <vaclav.jancarik@lundegaard.eu>",
		"Martin Machacek <martin.machacek@lundegaard.eu>"
	],
	"license": "MIT",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"@build": "----- COMMANDS TO BUILD WHOLE LIBRARY -----",
		"build": "yarn build:lundium-components && yarn build:storybook",
		"build:storybook": "yarn storybook build",
		"build:lundium-components": "webpack",
		"@other": "----- OTHER SCRIPTS -----",
		"start": "yarn storybook start",
		"generate": "plop --plopfile \"./.plop/plopfile.js\"",
		"lint": "yarn lint:js && yarn lint:css",
		"lint:js": "eslint --cache --ignore-path .gitignore --ext .js ./",
		"lint:css": "stylelint \"**/*.scss\" --cache --cache-location \".stylelintcache/\" --allow-empty-input",
		"prettier": "prettier --write --ignore-path .gitignore \"**/*.{js,mdx,md,html,json}\"",
		"test": "jest",
		"storybook": "yarn workspace @lundium/storybook",
		"create-stats": "webpack --profile --json > stats.json",
		"analyze": "yarn create-stats && webpack-bundle-analyzer ./stats.json"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"@babel/plugin-proposal-decorators": "^7.8.3",
		"@babel/plugin-proposal-do-expressions": "^7.8.3",
		"@babel/plugin-proposal-export-default-from": "^7.8.3",
		"@babel/plugin-proposal-export-namespace-from": "^7.8.3",
		"@babel/plugin-proposal-function-sent": "^7.8.3",
		"@babel/plugin-proposal-logical-assignment-operators": "^7.8.3",
		"@babel/plugin-proposal-numeric-separator": "^7.8.3",
		"@babel/plugin-proposal-pipeline-operator": "^7.8.3",
		"@babel/plugin-proposal-throw-expressions": "^7.8.3",
		"@babel/plugin-syntax-import-meta": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.8.3",
		"@babel/preset-env": "^7.8.3",
		"@babel/preset-es2015": "^7.0.0-beta.53",
		"@babel/preset-react": "^7.8.3",
		"autoprefixer": "^9.7.4",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"babel-preset-react-union": "^0.15.2",
		"css-loader": "^3.4.2",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"enzyme-to-json": "^3.4.3",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-config-react-union": "^0.15.2",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-import": "^2.20.0",
		"eslint-plugin-react": "^7.18.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"glob": "^7.1.6",
		"husky": "^4.0.10",
		"jest": "^24.9.0",
		"lerna": "^3.20.2",
		"lint-staged": "^9.5.0",
		"plop": "^2.5.3",
		"postcss-dir-pseudo-class": "^5.0.0",
		"postcss-logical": "^4.0.2",
		"prettier": "1.19.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"style-loader": "^1.1.2",
		"stylelint": "^13.0.0",
		"stylelint-scss": "^3.13.0",
		"webpack": "^4.41.5",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.10"
	}
}
